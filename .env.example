# ==========================
# Configuration IA
# ==========================
AI_API_MODE=lmstudio           # Options: 'openai' | 'lmstudio' | 'ollama'
AI_TIMEOUT=60                  # Délai IA (s). Sert aussi de timeout pour les requêtes HA (état + image)
LOG_LEVEL=INFO                 # Niveau de logs CLI: DEBUG | INFO | WARNING | ERROR

# ==========================
# OpenAI
# ==========================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o

# ==========================
# LM Studio (compatible API OpenAI)
# ==========================
LMSTUDIO_URL=http://127.0.0.1:11434/v1
LMSTUDIO_MODEL=qwen/qwen2.5-vl-7b

# ==========================
# Ollama (compatible API OpenAI)
# ==========================
OLLAMA_URL=http://127.0.0.1:11434/v1
OLLAMA_MODEL=llava:latest

# ==========================
# MQTT (pour Home Assistant)
# ==========================
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=votre_mot_de_passe
MQTT_TOPIC_PREFIX=iaction

# ==========================
# Home Assistant (infos device)
# ==========================
HA_DEVICE_NAME=IAction
HA_DEVICE_ID=iaction_camera_ai

# ==========================
# Mode de capture
# ==========================
CAPTURE_MODE=rtsp              # 'rtsp' (flux vidéo) ou 'ha_polling' (image via API Home Assistant)

# ==========================
# RTSP Multi-Caméras (si CAPTURE_MODE=rtsp)
# ==========================
# Caméra 1 (principale)
DEFAULT_RTSP_URL=
RTSP_USERNAME=
RTSP_PASSWORD=
RTSP_NAME=Caméra Principale
RTSP_WIDTH=640                     # Résolution (largeur)
RTSP_HEIGHT=480                    # Résolution (hauteur)
RTSP_FPS=15                        # FPS (réduit pour performance)

# Caméras additionnelles (2 à 6)
DEFAULT_RTSP_URL_2=
RTSP_USERNAME_2=
RTSP_PASSWORD_2=
RTSP_NAME_2=Caméra Entrée
RTSP_WIDTH_2=640
RTSP_HEIGHT_2=480
RTSP_FPS_2=10                      # FPS encore plus bas pour l'entrée

DEFAULT_RTSP_URL_3=
RTSP_USERNAME_3=
RTSP_PASSWORD_3=
RTSP_NAME_3=Caméra Jardin
RTSP_WIDTH_3=640
RTSP_HEIGHT_3=480
RTSP_FPS_3=15

DEFAULT_RTSP_URL_4=
RTSP_USERNAME_4=
RTSP_PASSWORD_4=
RTSP_NAME_4=Caméra Garage
RTSP_WIDTH_4=320                   # Résolution réduite pour garage
RTSP_HEIGHT_4=240
RTSP_FPS_4=5                       # FPS très bas pour garage

DEFAULT_RTSP_URL_5=
RTSP_USERNAME_5=
RTSP_PASSWORD_5=
RTSP_NAME_5=Caméra Bureau
RTSP_WIDTH_5=640
RTSP_HEIGHT_5=480
RTSP_FPS_5=15

DEFAULT_RTSP_URL_6=
RTSP_USERNAME_6=
RTSP_PASSWORD_6=
RTSP_NAME_6=Caméra Salon
RTSP_WIDTH_6=640
RTSP_HEIGHT_6=480
RTSP_FPS_6=15

# ==========================
# HA Polling (si CAPTURE_MODE=ha_polling)
# ==========================
HA_BASE_URL=                   # URL de base de Home Assistant (ex: http://homeassistant.local:8123)
HA_TOKEN=                      # Token d'accès long (Profil > Paramètres > Jetons d'accès long)
HA_ENTITY_ID=                  # ex: camera.entree
HA_IMAGE_ATTR=entity_picture   # Attribut image (par défaut)
HA_POLL_INTERVAL=1.0           # Intervalle de polling (s)

# ==========================
# Analyse - Intervalles personnalisés par caméra
# ==========================
MIN_ANALYSIS_INTERVAL=0.1          # Intervalle global par défaut (s)

# Intervalles personnalisés par caméra (optionnel)
CAMERA_ID_1=rtsp_0                 # ID de la caméra 1
MIN_ANALYSIS_INTERVAL_1=0.1        # Intervalle pour caméra principale (fréquent)

CAMERA_ID_2=rtsp_1                 # ID de la caméra 2  
MIN_ANALYSIS_INTERVAL_2=0.5        # Intervalle pour entrée (modéré)

CAMERA_ID_3=rtsp_2                 # ID de la caméra 3
MIN_ANALYSIS_INTERVAL_3=1.0        # Intervalle pour jardin (moins fréquent)

CAMERA_ID_4=rtsp_3                 # ID de la caméra 4
MIN_ANALYSIS_INTERVAL_4=2.0        # Intervalle pour garage (rare)

CAMERA_ID_5=rtsp_4                 # ID de la caméra 5
MIN_ANALYSIS_INTERVAL_5=0.2        # Intervalle pour bureau (fréquent)

CAMERA_ID_6=rtsp_5                 # ID de la caméra 6
MIN_ANALYSIS_INTERVAL_6=0.3        # Intervalle pour salon (modéré)